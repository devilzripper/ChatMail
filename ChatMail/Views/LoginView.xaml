<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatMail.Views"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" 
             xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions" x:Class="ChatMail.Views.LoginView"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="10,10,10,10" HorizontalAlignment="Center" VerticalAlignment="Center" >
        <StackPanel Height="Auto" Width="100">
            <TextBlock HorizontalAlignment="Center"><Run Text="Username"/></TextBlock>
            <TextBox x:Name="tbUsername"/>
            <TextBlock HorizontalAlignment="Center"><Run Text="Password"/></TextBlock>
            <PasswordBox x:Name="passwordbox"/>
            <Button Content="Login" Margin="0,10,0,0" Click="Login_Click"/>
            <Button Content="Not registered? Join now" />
            <TextBlock x:Name="labelMessage"></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
